<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".skinsActivity"
    tools:showIn="@layout/activity_skins">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="52dp"
        android:antialias="false"
        android:onClick="goToMainActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/backarrow" />

    <android.support.v7.widget.GridLayout
        android:layout_width="264dp"
        android:layout_height="322dp"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButtonSkin0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="touchSkin"
            android:tag="0"
            app:srcCompat="@drawable/testenemy1" />

        <TextView
            android:id="@+id/textViewSkin0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bought"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="1"
            tools:text="Bought" />

        <ImageButton
            android:id="@+id/imageButtonSkin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="touchSkin"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/testenemy5" />

        <TextView
            android:id="@+id/textViewSkin1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButtonSkin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="touchSkin"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/testenemy5" />

        <TextView
            android:id="@+id/textViewSkin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_column="2"
            app:layout_gravity="center_horizontal"
            app:layout_row="1" />

        <ImageButton
            android:id="@+id/imageButtonSkin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="touchSkin"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/testenemy5" />

        <TextView
            android:id="@+id/textViewSkin3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_column="0"
            app:layout_gravity="center_horizontal"
            app:layout_row="3" />

        <ImageButton
            android:id="@+id/imageButtonSkin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="touchSkin"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/testenemy5" />

        <TextView
            android:id="@+id/textViewSkin4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_column="1"
            app:layout_gravity="center_horizontal"
            app:layout_row="3" />

        <ImageButton
            android:id="@+id/imageButtonSkin5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="touchSkin"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/testenemy5" />

        <TextView
            android:id="@+id/textViewSkin5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_column="2"
            app:layout_gravity="center_horizontal"
            app:layout_row="3" />

    </android.support.v7.widget.GridLayout>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Selected Skin:"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewSkinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="Alpha"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView15" />

    <TextView
        android:id="@+id/textViewGStarCountSkins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="52dp"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />
</android.support.constraint.ConstraintLayout>