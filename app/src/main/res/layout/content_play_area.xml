            android:contentDescription="@string/button10"
            android:onClick="hit"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/testenemy4" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
